<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="185dp"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        app:cardCornerRadius="12dp"
        android:id="@+id/cardNotes"
        app:cardElevation="5dp"
        android:layout_margin="5dp"

>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
                android:layout_width="118dp"
                android:layout_height="68dp"
                android:id="@+id/titleTV"
                android:text="Title"
                android:padding="10dp"
                android:fontFamily="@font/futuraheavyfont"
                android:textColor="@android:color/black"
                android:textSize="20sp" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="86dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="67dp"
                app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
                android:layout_width="185dp"
                android:layout_height="86dp"
                android:id="@+id/descTV"
                android:text="Description"
                android:padding="10dp"
                android:fontFamily="@font/futurabookfont"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="68dp" app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/idTV"
                android:text="1"
                android:padding="10dp"
                android:fontFamily="@font/futuraheavyfont"
                android:textColor="@android:color/holo_red_light"
                android:textSize="28sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="95dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="146dp"
                android:layout_marginEnd="2dp" app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>